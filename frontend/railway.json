{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "frontend/Dockerfile",
    "watchPatterns": ["frontend/**"]
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "startCommand": "serve dist/spa -s -l $PORT"
  }
}